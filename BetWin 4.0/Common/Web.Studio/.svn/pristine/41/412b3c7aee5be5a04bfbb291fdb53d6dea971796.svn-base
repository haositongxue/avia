.popup-box { position: fixed; min-width: 270px; left: 50%; top: 50%; transform: translate(-50%,-50%); background-color: #fff; z-index: 20200101; }
.popup-box-content { position: relative; padding: 15px; border-radius: 13px 13px 0 0; background: rgba(255,255,255,.95); }


.popup-box.popup-box-alert { border-radius: 16px; }
    .popup-box.popup-box-alert .popup-box-content { text-align: center; font-size: 14px; }
    .popup-box.popup-box-alert .popup-box-btns { border-top: 1px solid rgba(0,0,0,.2); display: flex; height: 44px; }
        .popup-box.popup-box-alert .popup-box-btns label { font-size: 17px; line-height: 44px; position: relative; display: block; overflow: hidden; box-sizing: border-box; width: 100%; height: 44px; padding: 0 5px; cursor: pointer; text-align: center; white-space: nowrap; text-overflow: ellipsis; color: #007aff; background: rgba(255,255,255,.95); -webkit-box-flex: 1; }
            .popup-box.popup-box-alert .popup-box-btns label:first-child { border-bottom-left-radius: 15px; }
            .popup-box.popup-box-alert .popup-box-btns label:last-child { border-bottom-right-radius: 15px; }

/* 遮罩 */
.popup-mask { position: fixed; left: 0px; right: 0px; bottom: 0px; top: 0px; background-color: rgba(0,0,0,.5); }
