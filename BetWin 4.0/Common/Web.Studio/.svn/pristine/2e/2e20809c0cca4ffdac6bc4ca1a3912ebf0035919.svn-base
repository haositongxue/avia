body { height: 100%; }

.bw-frame-container { height: 100%; overflow-y: auto; }
    .bw-frame-container .frame-item { position: absolute; transition: all 0.5s; transform: translate3d(-30%,0,0); background-color: #fff; height: 100%; top: 0px; width: 100%; overflow: auto; }
        .bw-frame-container .frame-item:last-child { transform: translate3d(100%,0,0); }
        .bw-frame-container .frame-item.active { transform: none; }

/* 侧滑菜单 */
.bw-offcanvas { background-color: #fff; position: fixed; transition: transform .2s; }
    .bw-offcanvas.bottom { width: 100%; bottom: 0px; transform: translate(0,100%); min-height: 100px; }
    .bw-offcanvas.top { width: 100%; top: 0px; transform: translate(0,-100%); }
    .bw-offcanvas.left { height: 100%; left: 0px; transform: translate(-100%,0); }
    .bw-offcanvas.right { height: 100%; }

.active .bw-offcanvas { visibility: visible; }
    .active .bw-offcanvas.bottom,
    .active .bw-offcanvas.left { transform: translate(0,0); }
